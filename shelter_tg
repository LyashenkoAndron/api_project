@bot.message_handler(commands=['start'])
def start(msg):
    bot.send_message(
        msg.chat.id,
        'Я бункер бот, сейчас ты можешь сгенерировать себе персонажа или случившуюся катастрофу',
        reply_markup=keyboard
    )

@bot.message_handler(content_types=['text'])
def cont(message):
    if message.text == 'Дай катастрофу':
        bot.send_message(message.chat.id, 'катастрофа: ' + Disaster().catastrophe)
        print(1)
    else:
        bot.send_message(message.chat.id,
                         'пол и возраст: ' + Person().sex_age + '\n' + 'профессия: ' + Person().profession + '\n' + 'здоровье: ' + Person().health + '\n' + 'страх: ' + Person().fear  + '\n' + 'хобби: ' + Person().hobby + '\n' + 'багаж: ' + Person().luggage + '\n' + 'характер: ' + Person().character + '\n' + 'доп. информация: ' + Person().inf + '\n' + 'карта действия №1: ' + Person().card + '\n' + 'карта действия №2: ' + Person().card2)


bot.polling()
